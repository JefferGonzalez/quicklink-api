{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["api/**/*", "dist/**/*", "node_modules/**/*"],
  "rules": {
    "@typescript-eslint/no-misused-promises": "off"
  }
}
